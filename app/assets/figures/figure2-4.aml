finite-automaton {
  states {
    q0[label="q<tspan baseline-shift=sub>0</tspan>" initial]
    q1[label="q<tspan baseline-shift=sub>1</tspan>" terminal]
    q2[label="q<tspan baseline-shift=sub>2</tspan>"]
  }
  transitions {
    q0 1 -> q0
    q0 0 -> q2
    q2 0 -> q2
    q2 1 -> q1
    q1 0 -> q1
    q1 1 -> q1
  }
}
